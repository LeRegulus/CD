{% extends 'base.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <div style="width:50%; margin:auto;">
    <h1>Modification du profil</h1>

        {{ form_start(form) }}
        <div class="form-group">
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.name, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.lastName, {attr: {class: 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.address, {attr: {class: 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-7"> {{ form_row(form.tel, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="col-lg-5">
                    {{ form_row(form.birthday) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-4">
                    {{ form_row(form.sexe, {attr: {class: 'form-control'}}) }}
                </div>
                <div class="col-lg-8">
                    {{ form_row(form.profilPhoto, {attr: {class: 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.description, {attr: {class: 'form-control'}}) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    {{ form_end(form) }}
    </div>

    
{% endblock %}