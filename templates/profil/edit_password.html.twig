{% extends 'user.html.twig' %}

{% block title %}Modifier le profil{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class='alert alert-success'>{{message}}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class='alert alert-danger'>{{message}}</div>
    {% endfor %}

    <h1>Modification du mot de passe</h1>
    <form class="signin-form" method="post">
        <div class="form-group mb-3">
            <label class="label" for="pass">Mot de passe</label>
            <input type="password" name="pass" id="pass" class="form-control"  required autofocusd>
        </div>
        <div class="form-group mb-3">
            <label class="label" for="password">Confirmation deMot de passe</label>
            <input type="password" name="password" id="password" class="form-control" required></div>
            <div class="form-group"> 
                <button type="submit" class="form-control btn btn-primary submit px-3">Modifier</button>
            </div>
        </div>
    </form>

{% endblock %}